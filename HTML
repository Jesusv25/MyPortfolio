  <!-- Sound effect for email and links -->
  <audio id="click-sound">
    <source src="click-sound.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>

  <script>
    // Function to play click sound
    function playClickSound() {
      document.getElementById("click-sound").play();
    }

    // Attach the play sound effect to the email link
    const emailLink = document.querySelector(".email-link");
    emailLink.addEventListener("click", playClickSound);

    // Attach the play sound effect to all other links
    const links = document.querySelectorAll(".clickable-link");
    links.forEach(link => {
      link.addEventListener("click", playClickSound);
    });
  </script>
